<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.FragmentAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/whitespot_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <View
            android:id="@+id/wave_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/whitespot_1"
            android:background="@drawable/ic_wave__2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/wave_1"
            android:background="@color/backgroundColor"/>
    </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/anonymous_user" />
    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:id="@+id/info_panel"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card_profile">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="Asar"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="info_card"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/name_text">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/like_image"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="999999"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/like_image"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_idea"
        android:layout_below="@id/info_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>